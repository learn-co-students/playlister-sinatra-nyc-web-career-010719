<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <ul>
    <li>
      <label for="name">Name</label>
      <input id="name" type="text" name="song[name]" value="<%= @song.name %>" />
    </li>
    <li>
      <label for="artist_name">Artist Name</label>
      <input id="artist_name" type="text" name="song[artist]"  value="<%= @song.artist.name %>" />
    </li>
      <%Genre.all.each do |genre|%>
      <input type="checkbox" name="song[genres][]" id="<%= genre.id%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
      <%end%>
  </ul>
  <input type="submit" value="Save"/>
</form>
